@model hocvien.Model.Nhanvien
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Bạn thực sự muốn xóa</h3>
<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Họ tên 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hoten)
        </dd>
        <dt class = "col-sm-2">
           Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaysinh)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @if (Model.Gioitinh == 1)
            {
                <text>Nam</text>
            }
            else
            {
                <text>Nữ</text>
            }
        </dd>
        <dt class="col-sm-2">
            SDT
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
           Địa chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
       
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
        @*<dt class = "col-sm-2">
            Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matkhau)
        </dd>
        <dt class = "col-sm-2">
           Nhóm
        </dt>*@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nhom)
        </dd>
    </dl>
    
    <form asp-action="xoaNhanvien" method="post">
        <input type="hidden" asp-for="Manv" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
   
</div>
