@model hocvien.Model.Phieudangkyhoc

@{
    ViewData["Title"] = "formSuaphieudangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa phiếu đăng ký</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="suaPhieudangky" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Maphieu" />
            <div class="form-group">
                <label asp-for="Mahv" class="control-label">Mã học viên</label>
                <select asp-for="Mahv" class="form-control" asp-items="ViewBag.Mahv"></select>
                <span asp-validation-for="Mahv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaydk" class="control-label">Ngày đăng ký</label>
                <input asp-for="Ngaydk" class="form-control" />
                <span asp-validation-for="Ngaydk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ghichu" class="control-label">Ghi chú</label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
