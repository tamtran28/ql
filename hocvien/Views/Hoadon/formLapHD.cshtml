@{
    ViewData["Title"] = "Lập hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thông tin học viên</h2>
<table class="table">
    <tr>
        <th>Tên học viên</th>
        <th>Ngày sinh</th>
        <th>Giới tính</th>
        <th>SDT</th>
    </tr>
    <tr>
        <td>@ViewBag.Hocvien</td>
        <td>@ViewBag.NgaySinh.ToShortDateString()</td>
        <td>@ViewBag.GioiTinh</td>
        <td>@ViewBag.SDT</td>
    </tr>
</table>


@*<ul>
    @foreach (var lop in ViewBag.LopDangkyhocs)
    {
        <li>@lop</li>
        
    }
</ul>*@
<h2>Danh sách lớp đăng ký</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã lớp tuyển sinh</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            
            <th>Thứ học</th>
            <th>Giờ học</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.LopDangkyhocs.Count; i++)
        {
            <tr>
                <td>@ViewBag.LopDangkyhocs[i]</td>
                <td>@ViewBag.NgayBatDauList[i].ToShortDateString()</td>
                <td>@ViewBag.NgayKetThucList[i].ToShortDateString()</td>
               
                <td>@ViewBag.ThuHocList[i]</td>
                <td>@ViewBag.GioHocList[i]</td>
            </tr>
        }
    </tbody>
</table>
<h2>Thông tin thanh toán</h2>
<p>Tổng tiền: @ViewBag.TongTien</p>
<p>Số tiền đã trả: @ViewBag.SoTienDaTra</p>

<p>Số tiền còn lại: @ViewBag.SoTienConLai</p>

<h2>Nhập số tiền đóng</h2>
<form method="post" asp-action="hoaDon" asp-controller="Hoadon">
    <div class="form-group">
        <label for="sotien">Số tiền đóng:</label>
        <input type="text" id="sotien" name="sotien" class="form-control" value="@ViewBag.SoTienConLai" />
    </div>
    <div class="form-group">
        <label for="maphieu">Mã phiếu:</label>
        <input type="text" id="maphieu" name="maphieu" value="@ViewBag.maphieu" class="form-control" readonly />
    </div>
    <div class=" form-group" >
        @*<label for="sotiendatra">Số tiền đã trả:</label>*@
        <input type="hidden" id="sotiendatra" name="sotiendatra" value="@ViewBag.SoTienDaTra" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="hinhthuc">Hình thức thanh toán:</label>
        <select id="hinhthuc" name="hinhthuc" class="form-control">
            <option value="tienmat">Tiền mặt</option>
            <option value="chuyenkhoan">Chuyển khoản</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu thanh toán</button>
</form>
