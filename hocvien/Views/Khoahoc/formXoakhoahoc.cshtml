@model hocvien.Model.Khoahoc

@{
    ViewData["Title"] = "formXoakhoahoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa khóa học</h1>
@if ((int)ViewBag.flag == 0)
{
    <h5>Bạn thực sự muốn xóa</h5>
}
else
{
    <h5>Bạn không thể xóa</h5>
}

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã khóa học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Makh)
        </dd>
        <dt class = "col-sm-2">
            Tên khóa học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenkh)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Thoiluong)
        </dt>*@
       @* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thoiluong)
        </dd>*@
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motakh)
        </dd>
        <dt class = "col-sm-2">
           Người tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nguoitao)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaytao)
        </dd>
    </dl>

    <form asp-action="xoaKhoahoc" asp-route-id="@Model.Makh">
        @if ((int)ViewBag.flag == 0)
        {
            <input type="submit" value="Xóa" class="btn btn-danger" />

        }
    </form>
</div>
