    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}*@
<script>
    // Function to hide the error message after a specified duration (in milliseconds)
    function hideErrorMessage() {
        var errorMessageDiv = document.getElementById('msgAlertError');
        errorMessageDiv.style.display = 'none';
    }

    // Set a timeout to hide the error message after 4 seconds (4000 milliseconds)
    setTimeout(hideErrorMessage, 4000);
</script>