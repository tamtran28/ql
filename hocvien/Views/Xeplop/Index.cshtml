@model IEnumerable<hocvien.Model.Lophoc>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Danh sách lớp học</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
               Mã lớp học
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Mahv)
            </th>*@
            <th>
               Phòng học
            </th>
            <th>
               Mã lớp tuyển sinh
            </th>
            <th>
                Giáo viên
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Malophoc)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Mahv)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Phonghoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maloptuyensinh)
            </td>
            <td>
                    @item.LophocGiaoviens
            </td>
            <td>

               @* <td>
                    <a asp-action="danhSach" asp-route-id="@item.Maloptuyensinh" class="btn btn-primary">Tạo lớp học</a>
                </td>*@
                <td>
                    <a asp-action="danhSach" asp-route-malophoc="@item.Malophoc" asp-route-maloptuyensinh="@item.Maloptuyensinh" class="btn btn-primary">Tạo lớp học</a>
                </td>
                <td><a asp-action="DanhSachHocVien" asp-route-malophoc="@item.Malophoc" asp-controller="Xeplop" class="btn btn-primary">Xem danh sách</a></td>
                <td>
                    <a asp-action="ChonGiaoVien" asp-controller="Phancong" asp-route-malophoc="@item.Malophoc" class="btn btn-primary">Phân công</a>
                </td>
            </td>
        </tr>
}
    </tbody>    
</table>
