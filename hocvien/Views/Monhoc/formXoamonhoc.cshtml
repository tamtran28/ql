@model hocvien.Model.Monhoc

@{
    ViewData["Title"] = "formXoamonhoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>formXoamonhoc</h1>
@if ((int)ViewBag.flag == 0)
{
    <h5>Ban thuc su muon xoa</h5>
}
else
{
    <h5>Ban không the xoa</h5>
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Monhoc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã môn học
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mamh)
        </dd>
        <dt class="col-sm-2">
           Tên môn học
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenmh)
        </dd>
        <dt class="col-sm-2">
          Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt class="col-sm-2">
            Học phí
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hocphi)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
        <dt class="col-sm-2">
          Người tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nguoitao)
        </dd>
        <dt class="col-sm-2">
           Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaytao)
        </dd>
      
    </dl>

    <form asp-action="xoaMonhoc" asp-route-id="@Model.Mamh">
        @if ((int)ViewBag.flag == 0)
        {
            <input type="submit" value="Xóa" class="btn btn-danger" />

        }
    </form>
</div>
