@model hocvien.Model.Monhoc

@{
    ViewData["Title"] = "formXoamonhoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa môn học</h1>
@if ((int)ViewBag.flag == 0)
{
    <h5>Bạn thực sự muốn xóa</h5>
}
else
{
    <h5>Ban không thể xóa</h5>
}

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã môn học
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mamh)
        </dd>
        <dt class="col-sm-2">
           Tên môn học
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenmh)
        </dd>
        <dt class="col-sm-2">
          Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt class="col-sm-2">
            Học phí
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hocphi)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
        <dt class="col-sm-2">
          Người tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nguoitao)
        </dd>
        <dt class="col-sm-2">
           Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaytao)
        </dd>
      
    </dl>

    <form asp-action="xoaMonhoc" asp-route-id="@Model.Mamh">
        <div class="row">
            <div class="col-sm-2">
                @if ((int)ViewBag.flag == 0)
                {
                    <input type="submit" value="Xóa" class="btn btn-danger" />

                }
            </div>
            <div class="col-sm-10">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
      
    </form>
</div>
