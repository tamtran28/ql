@model IEnumerable<hocvien.Model.Monhoc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách môn học</h1>

<p>
    <a asp-action="formthemMonhoc" class="btn btn-primary">Thêm môn học</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mamh)
            </th>
            <th>
               Tên môn học
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Học phí
            </th>
            <th>
                Người tạo
            </th>
            <th>
               Ngày tạo
            </th>
            <th>
                Trạng thái
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mamh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenmh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hocphi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nguoitao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaytao)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trangthai)
                </td>
            <td>
                <td>
                    <a asp-action="formSuaMonhoc" asp-route-id="@item.Mamh" class="btn btn-primary">Sửa</a>
                </td>
                <td>
                    <a asp-action="formXoaMonhoc" asp-route-id="@item.Mamh" class="btn btn-danger delete-btn">Xóa</a>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
