@{
    ViewData["Title"] = "nhapDiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Phieudiem>
<h2>Nhập điểm cho lớp học</h2>

<form method="post" asp-action="LuuDiem">
    <input type="hidden" name="maLopHoc" value="@ViewBag.MaLopHoc" />

    <table class="table">
        <thead>
            <tr>
                <th>Mã học viên</th>
                <th>Họ tên</th>             
                <th>Điểm đọc</th>
                <th>Điểm viết</th>
                <th>Điểm nói</th>
                <th>Điểm nghe</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Mahv</td>
                    <td>@Model[i].MahvNavigation.Hoten</td>
                    <td>
                               <input type="hidden" name="[@i].Mahv" value="@Model[i].Mahv" />
                        <input type="text" name="[@i].Diemdoc" value="@Model[i].Diemdoc" class="form-control" />
                       
                    </td>
                    <td>
                        <input type="text" name="[@i].Diemviet" value="@Model[i].Diemviet" class="form-control" />
                        
                    </td>
                    <td>
                        <input type="text" name="[@i].Diemnoi" value="@Model[i].Diemnoi" class="form-control" />
                        
                    </td>
                    <td>
                        <input type="text" name="[@i].Diemnghe" value="@Model[i].Diemnghe" class="form-control" />
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Lưu điểm" class="btn btn-primary" />
    </div>
</form>
